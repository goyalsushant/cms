<h1>All Posts</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
            {{!-- <th>Body</th> --}}
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.status}}</td>
            <td>{{this.allowComments}}</td>
            <td><a href="/admin/posts/edit/{{this.id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{this.id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>